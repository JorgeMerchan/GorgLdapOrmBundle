<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gorg_ldap.host">%host%</parameter>
        <parameter key="gorg_ldap.port">%port%</parameter>
        <parameter key="gorg_ldap.user">%user%</parameter>
        <parameter key="gorg_ldap.passwd">%passwd%</parameter>
        <parameter key="gorg_ldap.root">%root%</parameter>
    
        <parameter key="gorg_ldap_orm.entity_manager.class">Gorg\Bundle\LdapOrmBundle\Ldap\LdapEntityManager</parameter>
    </parameters>

    <services>
        <service id="gorg_ldap_orm.entity_manager" class="%gorg_ldap_orm.entity_manager.class%">
			<argument type="service" id="logger" />
            <argument type="service" id="twig2" />
            <argument type="service" id="annotation_reader" />
            <argument>%gorg_ldap.host%</argument>
            <argument>%gorg_ldap.port%</argument>
            <argument>%gorg_ldap.user%</argument>
            <argument>%gorg_ldap.passwd%</argument>
            <argument>%gorg_ldap.root%</argument>
        </service>
    </services>
</container>
